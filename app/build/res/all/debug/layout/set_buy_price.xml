<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/buy_divider"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            />


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:weightSum="1.0"
            android:layout_below="@id/buy_divider"
            android:id="@+id/buy_price_row"
            >

        <TextView
                android:id="@+id/buy_price"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Buy Price:"
                />

        <EditText
                android:id="@+id/set_buy_price"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:weightSum="1.0"
            android:layout_below="@id/buy_price_row"
            android:id="@+id/share_count_row"
            >

        <TextView
                android:id="@+id/share_count"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Shares:"
                />

        <EditText
                android:id="@+id/set_share_count"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="fill_parent"
                android:inputType="number"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/buy_divider2"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_below="@id/share_count_row"
            />

    <TextView
            android:id="@+id/dpText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Buy Date:"
            android:layout_below="@id/buy_divider2"
            />

    <DatePicker
            android:id="@+id/buyDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dpText"/>

</RelativeLayout><!-- From: file:/home/kumarad/github/asaneconGradle/app/src/main/res/layout/set_buy_price.xml -->