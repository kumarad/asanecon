<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_portfolio_divider"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        />

    <EditText
        android:id="@+id/portfolioText"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/portfolio_add_hint"
        android:layout_below="@id/add_portfolio_divider">
    </EditText>

    <TextView
        android:id="@+id/add_portfolio_divider2"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_below="@id/portfolioText"
        />
</RelativeLayout>