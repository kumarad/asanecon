<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundActionBarColor">

    <include layout="@layout/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/add_divider"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            />

    <EditText
                android:id="@+id/stock_add"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="@string/stock_add_hint">
    </EditText>

    <TextView
            android:id="@+id/add_divider2"
            android:layout_width="fill_parent"
            android:layout_height="10dip"/>

    <include layout="@layout/dialog_ok_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>