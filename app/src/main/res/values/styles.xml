<resources>

    <style name="appTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#fff</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#fff</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:windowBackground">@color/backgroundDarkColor</item>
        <item name="android:colorBackground">@color/backgroundDarkColor</item>

        <item name="colorControlNormal">@color/asaneconTheme</item>
        <item name="colorControlActivated">@color/asaneconTheme</item>
        <item name="colorControlHighlight">@color/asaneconTheme</item>
    </style>

    <style name="Widget">
    </style>

    <style name="IconTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/IconTextAppearance</item>
    </style>

    <style name="IconTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="Widget.ProgressBar.RegularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/green_progressbar</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>

    <style name="Widget.ProgressBar.StopLossProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/stoploss_progressbar</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>

    <style name="stockCell">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/rounded_cell</item>
    </style>

    <style name="stockAlert">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/rounded_edges</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="stockAlertPositive">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/rounded_edges_green</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="stockAlertNegative">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/rounded_edges_red</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

</resources>
